def welcome():
  print("Hi, you are in the Hundred Acre Woods! Where would you like to go? 1). Pooh's House 2). Piglet's House 3). Tigger's House")
  answer = input(">")
  if answer == "1":
    print("Alright, taking you to Pooh's House!")
    pooh_house()
  if answer == "2":
    print("Alright, taking you to Piglet's House!")
    piglet_house()
  if answer == "3":
    print("Alright, taking you to Tigger's House!")

